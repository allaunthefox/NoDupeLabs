# Copy to .env and edit values before running ./deploy.sh render
# Make BASE_PATH absolute (e.g. /home/allaun/servarr/config)
BASE_PATH=__ABSOLUTE_BASE_PATH__

# Caddy/Email for ACME
CADDY_EMAIL=bigdataiscoming@protonmail.com

# Authentik
AUTHENTIK_IMAGE=ghcr.io/goauthentik/server:REPLACE_WITH_TAG
OUTPOST_URI=/outpost.goauthentik.io/auth/caddy

# Caddy
CADDY_IMAGE=docker.io/library/caddy:REPLACE_WITH_TAG

# Homarr
HOMARR_IMAGE=ghcr.io/ajnart/homarr:REPLACE_WITH_TAG

# Media apps
JELLYFIN_IMAGE=docker.io/jellyfin/jellyfin:REPLACE_WITH_TAG
NAVIDROME_IMAGE=docker.io/deluan/navidrome:REPLACE_WITH_TAG
AUDIOBOOKSHELF_IMAGE=ghcr.io/advplyr/audiobookshelf:REPLACE_WITH_TAG
KAVITA_IMAGE=docker.io/kizaing/kavita:REPLACE_WITH_TAG

# Vaultwarden (keeps independent auth)
VAULTWARDEN_IMAGE=docker.io/vaultwarden/server:REPLACE_WITH_TAG

# Arr apps (linuxserver)
RADARR_IMAGE=lscr.io/linuxserver/radarr:REPLACE_WITH_TAG
SONARR_IMAGE=lscr.io/linuxserver/sonarr:REPLACE_WITH_TAG
LIDARR_IMAGE=lscr.io/linuxserver/lidarr:REPLACE_WITH_TAG

# Permissions / timezone for linuxserver images
PUID=1000
PGID=1000
TZ=UTC
